        XK: {/^(XK[0-9]{2})\d{16}$/}
    ]

    ; for use in the checksum validation

    base36: (map 0..9 'x -> to :string x) ++ 
             map 97..122 'x -> upper to :string to :char x

    ;------------------
    ; methods
    ;------------------

    action: method [str, opts][
        sanitized: join split replace str {/[\s-]+/} ""
        countryCode: upper first.n:2 sanitized
        
        unless key? \countries countryCode -> return false
        rx: \countries\[countryCode]

        unless match? sanitized rx -> return false

        ; checksum validation
        ; see also:
        ; https://github.com/arturo-lang/arturo/blob/master/examples/rosetta/iban.art#L17-L27

        iban: (slice sanitized 4 (size sanitized)-1) ++ slice sanitized 0 3
        iban: join map split iban 'ch -> to :string index \base36 ch
        iban: to :integer iban

        return one? iban % 97
    ]

