define :versionValidator is :validator [

    ;------------------
    ; methods
    ;------------------

    action: method [str, opts][
        ; this test is due to the fact that
        ; sth like `1.2` would crash, instead
        ; of throwing an error
        unless 2 = enumerate str => [& = '.']
            -> return false

        not? throws? [
            discard to :version str
        ]
    ]

    test: method [][
        #[
            valid: [
            ]

            invalid: [
            ]
        ]
    ]
    
]