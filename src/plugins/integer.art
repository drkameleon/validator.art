;==========================================================
; Integer validation plugin
;
; @file: src/plugins/integerl.art
;==========================================================

;------------------
; parameters
;------------------
params: #[]

;------------------
; main action
;------------------
action: function [str, params][
    ; based on our own `to` converter
    ; and catching possible errors with `throws?`
    not? throws? [
        _: to :integer str
    ]
]

;------------------
; tests
;------------------
test: #[
    valid: [
        "12"
        "1234"
        "1234567890"
    ]

    invalid: [
        ""
        "1.5"
        "three"
        "%$#@^#$"
    ]
]